#!/usr/bin/env bash

# recursive search in text files
grep \
  --color \
  --extended-regexp \
  -I \
  --recursive \
  "$@" \
  --exclude=.session.vim \
  --exclude=tags \
  --exclude-dir=\.bzr \
  --exclude-dir=\.cache \
  --exclude-dir=\.egg-info \
  --exclude-dir=\.eggs \
  --exclude-dir=\.env \
  --exclude-dir=\.git \
  --exclude-dir=\.godot \
  --exclude-dir=\.hg \
  --exclude-dir=\.mypy_cache \
  --exclude-dir=\.nox \
  --exclude-dir=\.pytest_cache \
  --exclude-dir=\.ruff_cache \
  --exclude-dir=\.svn \
  --exclude-dir=\.testrepository \
  --exclude-dir=\.tox \
  --exclude-dir=\.venv \
  --exclude-dir=__pycache__ \
  --exclude-dir=build \
  --exclude-dir=build \
  --exclude-dir=dist \
  --exclude-dir=env \
  --exclude-dir=htmlcov \
  --exclude-dir=logs \
  --exclude-dir=node_modules \
  --exclude-dir=venv \

